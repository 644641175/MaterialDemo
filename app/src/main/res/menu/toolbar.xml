<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--always表示永远显示在Toolbar中，如果屏幕不够则不现实。
    ifRoom表示屏幕空间足够的的情况下显示在Toolbar中，不够就显示在菜单栏中。
    never表示永远显示在菜单栏中
    -->
    <item
        android:id="@+id/camera"
        android:icon="@drawable/ic_photo_camera_black_24dp"
        android:title="Camera"
        app:showAsAction="always" />
    <item
        android:id="@+id/backup"
        android:icon="@drawable/ic_backup_black_24dp"
        android:title="Backup"
        app:showAsAction="ifRoom" />
    <item
        android:id="@+id/sunny"
        android:icon="@drawable/ic_wb_sunny_black_24dp"
        android:title="Sunny"
        app:showAsAction="never" />
    <item
        android:id="@+id/announcement"
        android:icon="@drawable/ic_announcement_black_24dp"
        android:title="announcement"
        app:showAsAction="never" />
</menu>